FROM python:3.12-slim

WORKDIR /app

# Install dependencies
COPY pyproject.toml .
RUN pip install --no-cache-dir uv && \
    uv pip install --no-cache -e .

# Copy application code
COPY app.py .
COPY client.py .
COPY utils/ ./utils/

# Expose port for Gradio interface
EXPOSE 7860

# Run Gradio interface
CMD ["python", "app.py"]
